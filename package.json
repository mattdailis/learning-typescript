{
  "name": "react-ts-webpack",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --hot --inline --colors --port 3030 --open --history-api-fallback",
    "start": "yarn dev",
    "lint": "yarn tslint -c ./tslint.json './src/**/*.ts*'",
    "fix": "yarn tslint -c ./tslint.json './src/**/*.ts*' --fix",
    "typecheck": "yarn tsc --noemit",
    "test": "jest",
    "crcf": "node ./scripts/crcf/index.js",
    "new-container": "yarn crcf -u  --dir ./src/app/containers",
    "new-component": "yarn crcf -uf --dir ./src/app/components"
  },
  "dependencies": {
    "create-react-component-folder": "file:./scripts/crcf",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "typescript": "^3.0.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "cross-env": "^5.2.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^23.10.1",
    "ts-loader": "^5.1.1",
    "tslint": "^5.11.0",
    "webpack": "^4.19.1",
    "webpack-cleanup-plugin": "^0.5.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  }
}
