{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@Components/*": [
        "src/app/components/*"
      ],
      "@Containers/*": [
        "src/app/containers/*"
      ]
    }
  },
  "include": [
    "./src/**/**/*"
  ]
}